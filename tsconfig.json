{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node", "@playwright/test", "codeceptjs"]
  },
  "ts-node": {
    "files": true,
    "transpileOnly": true
  },
  "include": [
    "step_definitions/**/*.ts",
    "pageObjects/**/*.ts",
    "tools/**/*.ts",
    "pages/**/*.ts",
    "locators/**/*.ts",
    "helpers/**/*.ts",
    "tests/helpers/**/*.ts",
    "enums/**/*.ts",
    "config/**/*.ts",
    "scripts/**/*.ts",
    "codecept.conf.ts",
    "steps.d.ts",
    "global.d.ts"
  ],
  "exclude": ["node_modules"]
}
